<div class="row">
  <% if current_user && current_user.admin? %>
  <div class="col-md-4">
    <%= link_to "+New Topic", new_topic_path(), class: 'btn btn-success' %>
  </div>
  <% end %>
</div>

<% @topics.each_slice(3).each do |three_topics| %>
<div class="row">
  <% three_topics.each do |topic| %>
  <div class="col-sm-6 col-md-4">

    <div class="thumbnail">
      <%= image_tag(asset_path('thumb.svg'))%>
      <div class="caption">
        <h3><%= link_to topic.name, topic %></h3>
        <p><%= topic.description %></p>
      </div>
    </div>

  </div>
  <% end %>
</div>
<% end %>
