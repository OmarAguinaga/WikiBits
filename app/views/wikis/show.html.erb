<h1>
  <%= @wiki.title %> <br>
  <small>
    submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.username %>
    
    <% if @wiki.private%>
    <h6>
      <span class="label label-danger">PRIVATE</span>
    </h6>
    <% end %>
  </small>
</h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown @wiki.body %></p>
  </div>

  <% if user_is_authorized_for_wiki?(@wiki) %>
  <div class="col-md-4">
    <%= link_to "Edit", edit_topic_wiki_path(@wiki), class: 'btn btn-success' %>
    <%= link_to "Delete Wiki", [@wiki.topic, @wiki], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
  </div>
  <% end %>
</div>
